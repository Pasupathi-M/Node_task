// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_TWO")
}

model Todo {
  id       Int    @id @default(autoincrement())
  todoName String
}

model User {
  userId     String   @id @default(uuid())
  name       String
  email      String   @unique()
  role       Role     @relation(fields: [userRoleId], references: [roleId])
  userRoleId String
  password   String
  createdAt  String?
  updatedAt  DateTime @default(now())
}

model Role {
  roleId    String   @id @default(uuid())
  roleName  String
  createdAt String?
  updatedAt DateTime @default(now())
  User      User[]
}

model Product {
  productId   String   @id @default(uuid())
  productName String
  quantity    BigInt
  price       Float
  createdAt   String?
  updatedAt   DateTime @default(now())
  Sales       Sales[]
}

model Customer {
  customerId   String    @id @default(uuid())
  customerName String
  phNo         BigInt?
  createdAt    String?
  updatedAt    DateTime? @default(now())
  Sales        Sales[]
}

model Sales {
  saleId        String   @id @default(uuid())
  customer      Customer @relation(fields: [custId], references: [customerId])
  custId        String
  product       Product  @relation(fields: [slProdId], references: [productId])
  slProdId      String
  totalQuantity Int
  totalPrice    Float
  createdAt     String?
  updatedAt     DateTime @default(now())
}
